mixin videoPlayer(video = {})
    .videoPlayer#jsVideoContainer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
                span.volume
                    span#jsVolumeIcon
                        i.fas.fa-volume-up
                    input#jsVolumeRange(type="range", min = 0, max = 100)
                span.timeline
                    span#jsCurrentTime 00:00:00
                    span /
                    span#jsTotalTime 00:00:00
            .videoPlayer__column
                span.expand#jsFullscreen
                    i.fas.fa-expand